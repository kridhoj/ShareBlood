<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwhite"
    tools:context=".BloodDetail">
    <include layout="@layout/app_bar"
        android:id="@+id/main_app_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="idpost"
        android:layout_below="@id/main_app_bar"
        android:id="@+id/id_posttx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="idpost"
        android:layout_below="@id/id_posttx"
        android:textColor="@color/colorPrimary"
        android:id="@+id/id_post"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_app_bar"
        android:layout_alignParentRight="true"
        android:text="tanggalPost"
        android:id="@+id/tanggalPosttx"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggalPosttx"
        android:layout_alignParentRight="true"
        android:text="tanggalPost"
        android:id="@+id/tanggalPost"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_post"
        android:id="@+id/rl1"
        android:layout_marginLeft="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Golongan Darah"
            app:met_floatingLabel="highlight"
            android:enabled="false"
            app:met_textColor="#000000"
            android:id="@+id/goldar"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/maps_button"
            android:layout_toRightOf="@id/goldar"
            android:id="@+id/goldar_btn"
            android:text="Pilih"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Rumah Sakit"
            app:met_textColor="#000000"
            android:enabled="false"
            app:met_floatingLabel="highlight"
            android:layout_below="@id/goldar"
            android:id="@+id/rumahsakit"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:enabled="false"
            app:met_textColor="#000000"
            android:layout_below="@id/rumahsakit"
            app:met_floatingLabel="highlight"
            android:id="@+id/alamat"/>
        <Button
            android:layout_below="@id/rumahsakit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/maps_button"
            android:layout_toRightOf="@id/goldar"
            android:id="@+id/alamat_btn"
            android:text="Pilih"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:enabled="false"
            app:met_textColor="#000000"
            app:met_floatingLabel="highlight"
            android:layout_below="@id/alamat"
            android:id="@+id/deskripsi"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="edit"
            android:id="@+id/edit_btn"
            android:drawableLeft="@drawable/ic_edit"
            android:drawableTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="save"
            android:id="@+id/save_btn"
            android:drawableLeft="@drawable/ic_save"
            android:visibility="invisible"
            android:drawableTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            />
        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="delete"
            android:id="@+id/delete_btn"
            android:drawableLeft="@drawable/ic_delete"
            android:layout_toRightOf="@id/edit_btn"
            android:drawableTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:padding="10dp"
            />
    </RelativeLayout>
<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/latng"
    android:layout_below="@id/rl1"
    android:visibility="invisible"
    android:hint="asdadasd"
    />
    <com.rengwuxian.materialedittext.MaterialEditText
      android:layout_below="@id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longtng"
        android:visibility="invisible"
        android:hint="asdasdad"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:text="List Pendonor"
        android:textColor="@color/colorWhite"
        android:id="@+id/pendonor_btn"
        android:textAllCaps="false"/>
</RelativeLayout>