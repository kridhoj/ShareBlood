<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ridho.shareblood.MapsEventInput">

    <include layout="@layout/app_bar"
        android:id="@+id/main_app_bar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tesTx"
            android:text="Masukkan Alamat atau Lokasi melalui Maps"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tesTx"
            android:id="@+id/btnMaps"
            android:text="Open Maps"
            android:background="@color/colorPrimary"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMaps"
            android:id="@+id/tx4"
            android:layout_marginBottom="5dp"
            android:textSize="8dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx4"
            android:id="@+id/tx2"
            android:text="Masukkan Lokasi Event"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx2"
            android:hint="Lokasi Event"
            android:layout_centerHorizontal="true"
            android:id="@+id/etHospital"/>
    </RelativeLayout>


    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="@color/colorPrimary"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/colorPrimary"
        android:text="Lanjutkan"
        android:textColor="@color/colorWhite"
        />
</RelativeLayout>
