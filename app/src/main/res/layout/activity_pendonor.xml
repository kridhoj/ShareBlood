<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Pendonor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/app_bar"
            android:id="@+id/toolbar_page"/>
        <RelativeLayout
            android:layout_below="@id/toolbar_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Id"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/tx1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading ..."
                android:layout_toRightOf="@id/tx1"
                android:id="@+id/uid"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f4"
                android:layout_marginTop="10dp"
                android:layout_below="@id/uid"></RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/rl1"
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:divider="?android:dividerHorizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/splash_logo"
                android:id="@+id/imgProfil"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:id="@+id/l1"
            android:layout_below="@id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    app:met_textColor="@color/colorWhite"
                    android:id="@+id/p_name"
                    android:hint="name"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:id="@+id/p_gender"
                    app:met_textColor="@color/colorWhite"
                    android:hint="jenis kelamin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:id="@+id/p_phone"
                    android:hint="no telepon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:id="@+id/p_email"
                    android:hint="email"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:hint="tanggal lahir"
                    android:id="@+id/p_date"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:hint="agama"
                    android:id="@+id/p_agama"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:hint="alamat"
                    android:id="@+id/p_alamat"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:hint="golongan darah"
                    android:id="@+id/p_blood"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Telepon"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/white_button"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/hubungi"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Pesan"
                android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
                android:layout_toRightOf="@id/hubungi"
                android:id="@+id/pesan"
                android:drawableTint="@color/colorPrimary"
                android:background="@drawable/white_button"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"/>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>