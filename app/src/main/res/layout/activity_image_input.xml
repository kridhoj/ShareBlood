<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ridho.shareblood.ImageInput">

    <include layout="@layout/app_bar"
        android:id="@+id/toolbar_page"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tolong Pilih Photo Profile Anda"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/text2"/>
        <ImageView
            android:layout_below="@+id/text2"
            android:background="@color/colorPrimary"
            android:id="@+id/settings_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash_logo"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/settings_image_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_image"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@android:color/white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Chooes Image"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Lanjutkan"
        android:textAllCaps="false"
        android:id="@+id/nextButton"
        android:textColor="@color/colorWhite"

        />
</RelativeLayout>
